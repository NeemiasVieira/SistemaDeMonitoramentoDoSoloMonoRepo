// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

enum StatusSolicitacao {
  aguardando
  confirmado
  nenhuma
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model users {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  email         String   @unique(map: "findEmail")
  nome          String
  senha         String
  dataDeCriacao DateTime
  profile       String
}

model plantas {
  id                      String            @id @default(auto()) @map("_id") @db.ObjectId
  idDono                  String
  nome                    String
  especie                 String
  dataDaPlantacao         DateTime
  solicitacaoNovoRegistro StatusSolicitacao
}

model especies {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  nome           String
  descricao      String
  minNitrogenio  String
  minFosforo     String
  minPotassio    String
  minLuz         String
  minUmidade     String
  minTemperatura String
  minPh          String
  maxNitrogenio  String
  maxFosforo     String
  maxPotassio    String
  maxLuz         String
  maxUmidade     String
  maxTemperatura String
  maxPh          String
}

model registros {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  idPlanta       String
  nitrogenio     String
  fosforo        String
  potassio       String
  umidade        String
  temperatura    String
  pH             String
  luz            String
  dataDeRegistro DateTime
  imagem         String?
  diagnostico    String?
}
